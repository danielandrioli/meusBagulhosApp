<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="6dp">

    <TextView
        android:id="@+id/taskDoneTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_check_green_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Levar a Beca para mijar e tal testando blablablablablablabla 01 Levar a Beca para mijar e tal testando blablablablablablabla 02
Levar a Beca para mijar e tal testando blablablablablablabla 03" />

    <TextView
        android:id="@+id/taskDoneDateTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDoneTxt"
        tools:text="Feito em 27/11/21 as 08:11" />

</androidx.constraintlayout.widget.ConstraintLayout>